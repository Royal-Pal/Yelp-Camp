<%- include('../partials/header.ejs') %>

<style>
    h2 {
        text-align: center;
    }
    form {
        width: 30%;
        margin: 20px auto;
    }
    #goBack {
        text-align: center;
    }
</style>

<header class="container jumbotron">
    <h2>Edit Comment</h2>
</header>

<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input style="height: 46px;" class="form-control" type="text" name="newComment[text]" value="<%= comment.text %>">
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Update Comment</button>
    </div>
    <div class="form-group" id="goBack">
        <a href="/campgrounds/<%= campground_id %>" class="btn btn-xs btn-warning">Go Back</a>
    </div>
</form>

<%- include('../partials/footer.ejs') %>