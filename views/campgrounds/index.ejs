<%- include('../partials/header.ejs') %>

<style>
    h1 {
        text-align: center;
    }
</style>

<div class="container">
    <header class="jumbotron container">
        <h1>These are Best Camps all over the World</h1>
        <a href="/campgrounds/new" class="btn btn-info">Add New Camp</a>
    </header>
</div>

<div class="container">
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp) { %>
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>">
            </div>
            <div class="caption">
                <h4><%= camp.name %></h4>
            </div>
            <p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-info">View More</a>
            </p>
        </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>