<%- include('../partials/header.ejs') %>

<style>
    h2 {
        text-align: center;
    }
    form {
        width: 30%;
        margin: 20px auto;
    }
    #goBack {
        text-align: center;
    }
</style>

<header class="container jumbotron">
    <h2>Edit <%= campground.name %></h2>
</header>

<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input style="height: 46px;" class="form-control" type="text" name="newCampground[name]" value="<%= campground.name %>">
    </div>
    <div class="form-group">
        <input style="height: 46px;" class="form-control" type="text" name="newCampground[image]" value="<%= campground.image %>">
    </div>
    <div class="form-group">
        <input style="height: 46px;" class="form-control" type="number" step="0.01" min="0.05" name="newCampground[price]" value="<%= campground.price %>">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input style="height: 46px;" class="form-control" type="text" name="newCampground[location]" value="<%= campground.loaction %>">
    </div>
    <div class="form-group">
        <input style="height: 46px;" class="form-control" type="text" name="newCampground[description]" value="<%= campground.description %>">
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Update Camp</button>
    </div>
    <div class="form-group" id="goBack">
        <a href="/campgrounds" class="btn btn-xs btn-warning">Go Back</a>
    </div>
</form>

<%- include('../partials/footer.ejs') %>